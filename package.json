{
  "name": "slack-knowledge-agent",
  "version": "1.0.0",
  "description": "Slack Knowledge Agent - AI-powered knowledge extraction from Slack workspaces",
  "main": "backend/dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run backend:dev\" \"pnpm run frontend:dev\"",
    "build": "pnpm run clean && pnpm run frontend:build && pnpm run backend:build",
    "start": "cd backend && pnpm run start",
    "start:prod": "cd backend && NODE_ENV=production pnpm run start",
    "test": "pnpm run backend:test",
    "test:integration": "cd backend && pnpm run test:integration",
    "lint": "pnpm run backend:lint && pnpm run frontend:lint",
    "lint:fix": "pnpm run backend:lint:fix && pnpm run frontend:lint:fix",
    "typecheck": "pnpm run backend:typecheck && pnpm run frontend:typecheck",
    "clean": "rm -rf backend/dist backend/public frontend/dist node_modules/.cache",
    "backend:dev": "cd backend && pnpm run dev",
    "backend:build": "cd backend && pnpm run build",
    "backend:start": "cd backend && pnpm run start",
    "backend:test": "cd backend && pnpm run test",
    "backend:lint": "cd backend && pnpm run lint",
    "backend:lint:fix": "cd backend && pnpm run lint:fix",
    "backend:typecheck": "cd backend && pnpm run typecheck",
    "frontend:dev": "cd frontend && pnpm run dev",
    "frontend:build": "cd frontend && pnpm run build",
    "frontend:preview": "cd frontend && pnpm run preview",
    "frontend:lint": "cd frontend && pnpm run lint",
    "frontend:lint:fix": "cd frontend && pnpm run lint:fix",
    "frontend:typecheck": "cd frontend && pnpm run typecheck",
    "docker:build": "docker build -t slack-knowledge-agent .",
    "docker:run": "docker run -p 8000:8000 --env-file .env slack-knowledge-agent",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prepare": "husky install"
  },
  "keywords": [
    "slack",
    "ai",
    "knowledge",
    "agent",
    "llm",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}